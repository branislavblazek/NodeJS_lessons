<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head.ejs') %>

    <body>
        <%- include('./partials/nav.ejs') %>

            <div class="blogs content">
                <h3>All blogs</h3>
                <% if (blogs.length) {%>
                    <% blogs.forEach(blog=> { %>

                        <h3 class="title">
                            <%= blog.title %>
                        </h3>
                        <p class="snippet">
                            <%= blog.snippet %>
                        </p>

                        <% }) %>
                            <% } else { %>
                                <p>There are no blogs to display</p>
                                <% } %>
            </div>
    </body>


    <%- include('./partials/footer.ejs') %>

</html>